<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanel.AddStudent.AddStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:isScrollContainer="true"
        >

        <EditText
            android:id="@+id/stdName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:hint="Enter Student Name"
            android:layout_margin="10dp"
            android:background="@drawable/green_etext_shape"/>
        <EditText
            android:id="@+id/stdID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:hint="Enter Student ID"
            android:layout_margin="10dp"
            android:maxLength="13"
            android:background="@drawable/green_etext_shape"/>
        <EditText
            android:id="@+id/stdBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:hint="Enter Student Batch"
            android:layout_margin="10dp"
            android:maxLength="3"
            android:background="@drawable/green_etext_shape"/>

        <Spinner
            android:id="@+id/stdDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/green_spinner_shap">

        </Spinner>
        <EditText
            android:id="@+id/stdUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:hint="Enter Student Username"
            android:layout_margin="10dp"
            android:maxLength="8"
            android:background="@drawable/green_etext_shape"/>
        <EditText
            android:id="@+id/stdPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:hint="Enter Student Password"
            android:layout_margin="10dp"
            android:maxLength="8"
            android:background="@drawable/green_etext_shape"/>
       <EditText
            android:id="@+id/stdEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:hint="Enter Student E-mail"
            android:layout_margin="10dp"
           android:inputType="textEmailAddress"
            android:background="@drawable/green_etext_shape"/>
        <EditText
            android:id="@+id/stdMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#000000"
            android:hint="Enter Student Mobile Number"
            android:layout_margin="10dp"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/green_etext_shape"/>


        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Save"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:background="@drawable/green_button_shap"
            android:onClick="saveData"
            android:textAllCaps="false"/>


    </LinearLayout>
</ScrollView>
